<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>

<div class="container">
  <h2 style="margin-bottom: 35px;">Change your <span class="userSpan">password.</span></h2>
<div class="form-content form-contentFP">
    <form method="post" action="/forgot-password">
        <div class="mb-3">
          <label for="email" class="form-label">Email <span>Id</span></label>
          <input type="email" class="form-control" id="email" name="emailIdFP" aria-describedby="emailHelp" required>
        </div>
        <div class="mb-3">
          <label for="newP" class="form-label">New Pass<span>word</span></label>
          <input type="password" class="form-control newPass" id="newP" name="password" required>
        </div>
        <div class="mb-3">
          <label for="conP" class="form-label">Confirm Pass<span>word</span></label>
          <input type="password" class="form-control confirmPass" id="conP" name="changedPassword" required>
        </div>
        <button type="submit" id="btn-reg">Submit</button><span class="updatesFP" id="passUpdate"></span>
      </form>
    </div>
</div>
<script>
  const newPass = document.getElementById("newP");
const conPass = document.getElementById("conP");
const pUpdate = document.getElementById("passUpdate");
let inputValue = "";
let conPassValue = "";

newPass.addEventListener("keyup", ()=> {
  inputValue = newPass.value;
})

conPass.addEventListener("keyup", ()=> {
  conPassValue = conPass.value;
  if(inputValue != conPassValue) {
      pUpdate.innerHTML = "Password dosn't match!";
      pUpdate.style.color = "#ff0000";
      
  }
  else {
      pUpdate.innerHTML = "Good";
      pUpdate.style.color = "#00ff0d";
  }
})
</script>
</body>
</html>

